
# [PROD] 운영 환경 변수 (Casino-Club F2P)
# 실제 운영 배포에만 사용, dev와 값/보안 분리

# DB (운영: PostgreSQL)
DATABASE_URL=postgresql://casino_admin:secure_password_here@localhost:5432/casino_db
POSTGRES_USER=casino_admin
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=casino_db
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_for_prod

# JWT/보안
JWT_SECRET_KEY=super_secure_production_key_here
JWT_SECRET=super_secure_production_key_here
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO

# 포트
BACKEND_PORT=8000
FRONTEND_PORT=3000

# URL/도메인
FRONTEND_URL=https://your-domain.com
