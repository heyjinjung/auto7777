# Staging Environment Configuration
# Casino-Club F2P Application - STAGING USE

# Application Environment
APP_ENV=staging
NODE_ENV=production
DEBUG=false
ENVIRONMENT=staging

# Database Configuration (PostgreSQL) - STAGING
DB_HOST=postgres
DB_PORT=5432
DB_NAME=cc_webapp_staging
DB_USER=cc_user_staging
DB_PASSWORD=staging_secure_password_change_in_production
DATABASE_URL=postgresql://cc_user_staging:staging_secure_password_change_in_production@postgres:5432/cc_webapp_staging

# PostgreSQL Docker Configuration
POSTGRES_DB=cc_webapp_staging
POSTGRES_USER=cc_user_staging
POSTGRES_PASSWORD=staging_secure_password_change_in_production

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CLIENT_ID=casino-club-app-staging

# Security Configuration - CHANGE IN PRODUCTION
JWT_SECRET_KEY=staging-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=45
API_SECRET_KEY=staging-api-secret-key-change-in-production

# Server Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Frontend Configuration
STAGING_API_URL=http://localhost:8000
STAGING_WS_URL=ws://localhost:8000
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=Casino-Club F2P (Staging)
NEXT_PUBLIC_ENVIRONMENT=staging

# Game Configuration
INITIAL_CYBER_TOKENS=200

# Corporate Site Integration - STAGING
CORPORATE_SITE_URL=https://staging-corporate-site.com
CORPORATE_API_KEY=staging-corporate-api-key

# CORS Configuration
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "https://staging.yourdomain.com"]

# Documentation - ENABLED IN STAGING
ENABLE_DOCS=true

# Logging Configuration
LOG_LEVEL=INFO

# Monitoring
ENABLE_MONITORING=true

# Performance Settings
WORKER_PROCESSES=2
WORKER_CONNECTIONS=500
